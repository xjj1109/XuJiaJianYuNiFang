<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/closes"
            android:src="@mipmap/back_normal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#778899">
        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#778899"
            android:layout_marginTop="60px">
            <TextView
                android:id="@+id/num_login"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="御泥坊账号登陆"
                android:gravity="center_horizontal"

             />
            <TextView
                android:id="@+id/quickly_zuche"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机快速登陆"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/phone_login"
            android:layout_below="@+id/lin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:layout_marginTop="20px"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            /> <EditText
        android:id="@+id/phone_zhuce"
        android:layout_below="@+id/phone_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="密码"
        android:layout_marginTop="20px"
        android:background="#fff"
        /><TextView
        android:id="@+id/froget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_below="@+id/phone_zhuce"
        android:layout_alignLeft="@+id/phone_zhuce"
        android:layout_marginTop="20px"/>
<Button

    android:id="@+id/mine_login"
    android:layout_width="500px"
    android:layout_height="100px"
    android:layout_centerHorizontal="true"
    android:background="@mipmap/my_score_backgroud"
    android:layout_below="@+id/froget_tv"
    android:text="登陆"
    android:textColor="#fff"
    android:layout_marginTop="40px"/>
    <ImageView
        android:layout_marginTop="50px"
        android:visibility="invisible"
        android:id="@+id/manjian"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:src="@mipmap/a5"
        android:layout_below="@+id/mine_login"
        />
        <TextView
            android:layout_marginTop="200px"
            android:id="@+id/disanfang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方快速登陆"
            android:layout_below="@+id/manjian"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="#ff95ca"
            android:gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/disanfang_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/a8"
            android:layout_toRightOf="@+id/disanfang"
            android:layout_alignBottom="@+id/disanfang"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方快速登陆用户不享受任何御泥坊会员权益"
            android:layout_below="@+id/disanfang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6px"/>

    </RelativeLayout>



</LinearLayout>
