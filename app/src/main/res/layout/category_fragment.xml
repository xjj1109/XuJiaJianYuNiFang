<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="40px"
            android:src="@mipmap/ss" />
        <EditText
            style="?android:attr/textViewStyle"
            android:layout_width="400px"
            android:layout_height="100px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="100px"
            android:background="@null"
            android:hint="请输入商品内容" />
    </LinearLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="480px"
                        android:src="@mipmap/cate_img1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <LinearLayout
                        android:id="@+id/lin7"
                        android:layout_width="wrap_content"
                        android:layout_height="160px"
                        android:layout_toRightOf="@+id/img1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="200px"
                            android:layout_marginRight="20px"
                            android:layout_weight="1"
                            android:src="@mipmap/cate_img2" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="wrap_content"
                            android:layout_height="200px"
                            android:layout_weight="1"
                            android:src="@mipmap/cate_img3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin8"
                        android:layout_width="wrap_content"
                        android:layout_height="160px"
                        android:layout_below="@+id/lin7"
                        android:layout_toRightOf="@+id/img1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20px"
                            android:layout_weight="1"
                            android:src="@mipmap/cate_img4" />

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/cate_img5" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="wrap_content"
                        android:layout_height="200px"
                        android:layout_alignBottom="@+id/img1"
                        android:layout_below="@+id/lin8"
                        android:layout_toRightOf="@id/img1"
                        android:src="@mipmap/cate_img6" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dip"
                    android:layout_marginTop="10px"
                    android:background="@color/backgrounds"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="              ---" />

                    <TextView
                        android:id="@+id/fenlei_gongxiao"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="          sss" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="---" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="美丽从选对产品开始"
                    android:textColor="@color/backgrounds" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fenlei_tv1"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:background="@mipmap/classify_hydrating"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/fenlei_tv2"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:background="@mipmap/classify_soothing"
                        android:gravity="center"
                       />

                    <TextView
                        android:id="@+id/fenlei_tv3"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:background="@mipmap/classify_control_oil"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/fenlei_tv4"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:background="@mipmap/classify_whitening"
                        android:gravity="center"
                         />

                    <TextView
                        android:id="@+id/fenlei_tv5"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:background="@mipmap/classify_firming"
                        android:gravity="center"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6px"
                    android:layout_marginTop="40px"
                    android:background="#d0d0d0"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="40px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="              ---" />

                <TextView
                    android:id="@+id/fenlei_fuzhi"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="          sss" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="---" />
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="适合自己的才是最好地方"
                    android:layout_gravity="center"
                    android:textColor="@color/backgrounds"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40px">
            <TextView
                android:id="@+id/fenlei_fuzhu3"
                android:layout_width="0px"
                android:layout_height="100px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="sss"
                android:textColor="#fff"
                android:background="#A5a552"
                android:layout_marginLeft="20dp"
                />
                    <TextView
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:id="@+id/fenlei_fuzhu2"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="sss"
                        android:textColor="#fff"
                        android:background="#C48888"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40px">
                    <TextView
                        android:id="@+id/fenlei_fuzhu1"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="sss"
                        android:textColor="#fff"
                        android:background="#9595c5"
                        android:layout_marginLeft="40px"
                        />
                    <TextView
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:id="@+id/fenlei_fuzhu4"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="sss"
                        android:textColor="#fff"
                        android:background="#afaf61"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40px">
                    <TextView
                        android:id="@+id/fenlei_fuzhu5"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="sss"
                        android:textColor="#fff"
                        android:background="#cf9e9e"
                        android:layout_marginLeft="40px"
                        />
                    <TextView
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:id="@+id/fenlei_fuzhu6"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="sss"
                        android:textColor="#fff"
                        android:background="#a3d1d1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40px">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="              ---" />

                    <TextView
                        android:id="@+id/fenlei_mingxing"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="          明星产品" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="---" />
                </LinearLayout>
            <GridView
                android:id="@+id/fenlei_gv"
                android:layout_width="match_parent"
                android:layout_height="3100px"
                android:layout_marginTop="40px"
                android:numColumns="2"
                android:horizontalSpacing="6px"
                android:verticalSpacing="6px"></GridView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d0d0d0"
                android:text="查看所有商品"
                android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>
