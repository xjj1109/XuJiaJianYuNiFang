<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/biankuang3">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/fenlei_gv_item_img"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fenlei_gv_item_name"
        android:text="sss"/> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/fenlei_gv_item_dec"
    android:text="sss"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fenlei_gv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ddd"
            android:textColor="#ff95ca"/>   <TextView
        android:id="@+id/fenlei_gv_item_oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ddd"
        android:layout_marginLeft="5dp"
       />
    </LinearLayout>

</LinearLayout>
